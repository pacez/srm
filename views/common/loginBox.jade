#loginBox.modal.form-modal
  .modal-content
    h4 
      i.mdi-action-account-circle.prefix
      | &nbsp;用户登陆
    .loginBox
      .row
        form#loginForm.col.s12
          .row
            .input-field.col.s12
              input#user(type='text' name="user" autocomplete="off")
              label(for='user') 用户名
          .row
            .input-field.col.s12
              input#password(type='password' name="pwd" autocomplete="off")
              label(for='password') 密码
  .modal-footer
    a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') 关闭
    a#loginBtn.waves-effect.waves-green.btn-flat(href='#!') 登陆
    
script(type="application/javascript", src="/javascripts/common/login.js")
